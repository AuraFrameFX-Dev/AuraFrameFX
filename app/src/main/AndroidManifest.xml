<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.aurakai.auraframefx">

    <!-- Storage Permissions (Scoped storage makes these less needed for general app data) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Media Permissions (Android 13+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Foreground Service Base Permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Overlay Window Permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Special permissions for foreground services that need to start from background -->
    <uses-permission 
        android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_OPERATIONS" 
        tools:ignore="ProtectedPermissions" />

    <!-- Post Notifications Permission (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Wake Lock (If your service needs to keep the CPU awake for short periods) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".AuraFrameFXApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AuraFrameFX"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">

        <!-- Xposed Module Metadata -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="AuraFrameFX - Customize your system UI with beautiful decals and effects" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AuraFrameFX">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Intent filter for opening Kai's Toolbox from the overlay -->
            <intent-filter>
                <action android:name="dev.aurakai.auraframefx.ACTION_OPEN_KAI_TOOLBOX" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Kai Overlay Service -->
        <service
            android:name=".service.KaiOverlayService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <!-- 
                Special use case declaration for Android 14+
                This requires declaration in Play Console
            -->
            <meta-data
                android:name="android.app.property.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Persistent system overlay for Kai's interactive assistant" />
        </service>

        <!-- Xhancement Preferences Provider -->
        <provider
            android:name=".provider.XhancementPrefsProvider"
            android:authorities="${applicationId}.provider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="false"
            android:writePermission="false">
            <intent-filter>
                <action android:name="${applicationId}.preferences" />
            </intent-filter>
        </provider>
    </application>

</manifest>
